<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">

    <Button
        android:id="@+id/btn_stg_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_language"
        android:background="@android:color/white"
        android:textAllCaps="false"
        android:padding="18dp"
        android:gravity="start|center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/btn_stg_notification_open_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notif_is_off_open_app"
        android:background="@android:color/white"
        android:textAllCaps="false"
        android:padding="18dp"
        android:gravity="start|center"
        android:elevation="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_stg_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/btn_stg_notification_new_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notif_is_off_new_movie"
        android:background="@android:color/white"
        android:textAllCaps="false"
        android:padding="18dp"
        android:gravity="start|center"
        android:elevation="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_stg_notification_open_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>